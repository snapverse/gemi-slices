{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES6", "DOM", "DOM.Iterable", "WebWorker"],
    "types": ["declarations.d.ts", "chrome", "node"],
    "typeRoots": [
      "./",
      "./node_modules/@types",
      "../node_modules/@types",
      "../"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules/", "dist"]
}
