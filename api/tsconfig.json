{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES6"],
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "../node_modules/@types",
      "../"
    ],
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "files": true
  }
}
